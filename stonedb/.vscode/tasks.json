{
"version": "2.0.0",
"tasks": [
    {
    "type": "shell",
    "label": "g++ build active file",
    "command": "/usr/bin/g++",
    "args": ["-g", "-I", "/opt/oracle/sdk/include", "-O", "-c", "${file}"],
    "options": {
        "cwd": "${fileDirname}"
    },
    "problemMatcher": ["$gcc"],
    "group": {
        "kind": "build",
        "isDefault": true
    }
    }
]
}